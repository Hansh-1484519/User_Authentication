<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="login.css">
</head>
<body>
    <div class="card">
        <h1>Login</h1>
        <div class="form">
            <form action = "/users/login" method = "POST">
                <label>Username : </label> <input type="text" name = "username" id="username" placeholder="username" required>
                <label>Password : </label> <input type="password" name = "password" id="password" placeholder="password" required minlength="8">
                <button type="submit">Log In</button>
                <a href="/register" class = "button">Register</a>
            </form>
        </div>
    </div>
    <script src="login.js"></script>
</body>
</html>