<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="register.css">
</head>
<body>
    <div class="card">
        <h1>Register</h1>
        <div class="form">
            <form action="/users/register" method="POST" return = "false" >
                <label>Username : </label> <input type="text" id="username" placeholder="username">
                <label>Email : </label> <input type="text" id="email" placeholder="email">
                <label>Password : </label> <input type="text" id="password" placeholder="password">
                <button type="submit">Register</button>
                <a href="/login" class = "button">Log In</a>
            </form>
        </div>
        <script src="register.js"></script>
    </div>
    
</body>
</html>